		// TODO Auto-generated method stub
		return 0;
	}

	@Override
	public Purchase getPurchaseById(int id) throws StockException {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public List<Purchase> getAll() {
		// TODO Auto-generated method stub
		return null;
	}

}
